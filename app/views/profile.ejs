<!DOCTYPE html>
<% const nofooter = true %>
<html>
<head>
    <% include head %>
    <title><%=user.username%>'s Profile</title>
</head>
<body>
    <% include nav %>
    <div class="container">
        <div class="row">
        <h1><%=user.username%>'s Profile</h1>
        </div>
        <div class="row">
            <div class="col-md-6">
            <% for(var i = 0; i < posts.length; i++) { %>
            <% var post = posts[i] %>
            <% include partials/post %>
            <% } %>
            <% if (posts.length === 0) { %>
            <p>User has no posts</p>
            <% } %>
            </div>
        </div>
    </div>
    <% include footer %>
</body>
</html>